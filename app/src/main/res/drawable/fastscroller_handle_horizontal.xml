<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <size
                android:height="@dimen/fastscroller_track_width"
                android:width="@dimen/fastscroller_track_height" />
        </shape>
    </item>
    <item android:top="@dimen/fastscroller_track_offset" android:bottom="@dimen/fastscroller_track_offset">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/fastscroller_track_corner" />
            <solid android:color="@color/colorAccent" />
            <size
                android:height="@dimen/fastscroller_track_width"
                android:width="@dimen/fastscroller_track_height" />
        </shape>
    </item>
</layer-list>